div(ng-style="playerCard.cardStyle" ng-class="playerCard.styles.player")
    img(ng-src="{{playerCard.player | gravatarUrl:{size:playerCard.size} }}" class="player-icon" width="{{playerCard.size}}" height="{{playerCard.size}}" draggable="false")
    div(class="player-header" ng-click="playerCard.clickPlayerName($event)")
        text(ng-hide="playerCard.player._id") NEW:
        text(data-fittext=1 data-fittext-min="{{playerCard.minFontHeight}}" data-fittext-max="{{playerCard.maxFontHeight}}" ng-model="playerCard.player.name") {{playerCard.player.name || 'Unknown'}}
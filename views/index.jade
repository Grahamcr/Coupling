extends layout

block content
    h1= title
    p Welcome to #{title}.

    a(type="button" class="super pink button" ng-click="spin()") Spin!
    div(ng-view id="main-view")
    div(ng-cloak class="player-roster")
        h2 Players:
        span(ng-repeat="player in players" class="player" )
            img(gravatar-src="'{{player.email}}'" gravatar-size="100" class="player-icon")
            h4 {{player.name}}
            div
                input(type="checkbox" value="{{player.name}}" ng-model="selectionMap[player._id]")